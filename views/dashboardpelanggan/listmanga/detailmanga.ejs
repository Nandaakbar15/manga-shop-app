<div class="container px-4 px-lg-5 my-5">
  <div class="row gx-4 gx-lg-5 align-items-center">
    <div class="col-md-6">
      <img
        class="card-img-top mb-5 mb-md-0"
        src="/images/<%= manga.gambar %>"
        alt="..."
        style="width: 400px; height: 600px; object-fit: cover"
      />
    </div>
    <div class="col-md-6">
      <h1 class="display-5 fw-bolder"><%= manga.judul %></h1>
      <h3>Author</h3>
      <p class="lead"><%= manga.author %></p>
      <h3>Genre Manga</h3>
      <p class="lead"><%= manga.genre %></p>
      <h3>Status Manga</h3>
      <p class="lead"><%= manga.status %></p>
      <div class="d-flex">
        <button class="btn btn-outline-dark flex-shrink-0" type="button">
          <i class="bi-cart-fill me-1"></i>
          Add to cart
        </button>
        <a href="/pelanggan/daftarmanga" class="btn btn-primary">Kembali</a>
      </div>
    </div>
  </div>
</div>
